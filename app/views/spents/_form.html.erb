<%= form_for @spent, class:"form-horizontal" do |f| %>

  <% if @spent.errors.any? %>
    <% @spent.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "App Notification", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
      <%= f.label :value, class: "col-sm-2 control-label" %>
      <%= f.text_field :value, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <%= f.date_field :date, class: "form-control" %>
  <div>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <%= f.text_area :description, class: "form-control" %>
  <div>

  <div class="form-group">
    <%= f.radio_button :status, 'submitted' %>
    <%= f.label :status, 'Submitted' %>
    <%= f.radio_button :status, 'approved' %>
    <%= f.label :status, 'Approved' %>
    <%= f.radio_button :status, 'rejected' %>
    <%= f.label :status, 'Rejected' %>
  </div>

  <hr>
  <%= f.submit 'Save', class: "btn btn-primary btn-block" %>
<% end %>
